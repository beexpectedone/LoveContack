<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/mTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="号码"/>

            <EditText
                android:id="@+id/addContactNameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入联系人号码"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_toRightOf="@id/mTitle1"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/mTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名"/>

            <EditText
                android:id="@+id/addContactNumET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入联系人姓名"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_toRightOf="@id/mTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
            <TextView
                android:id="@+id/selectTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="通讯录选取"
                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/getPhotoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="从相册中获取照片"/>
        <ImageView
            android:id="@+id/contactIM"
            android:layout_below="@id/getPhotoTV"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>