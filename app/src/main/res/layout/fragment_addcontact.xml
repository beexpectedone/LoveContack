<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootViewLV"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollVIEW"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:id="@+id/mTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="姓名"/>

                    <EditText
                        android:id="@+id/addContactNameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="输入联系人姓名"
                        android:layout_marginLeft="20dp"
                        android:inputType="text"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:background="@null"
                        android:layout_toRightOf="@id/mTitle1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:id="@+id/mTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="号码"/>
                    <TextView
                        android:id="@+id/selectTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="通讯录选取"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/addContactNumET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="输入联系人号码"
                        android:layout_marginLeft="20dp"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:layout_toLeftOf="@id/selectTV"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:background="@null"
                        android:layout_toRightOf="@id/mTitle2" />

                </RelativeLayout>

                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
                <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
                <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
                <!--android:paddingTop="@dimen/activity_vertical_margin">-->


                <!--<TextView-->
                <!--android:id="@+id/mTitle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="号码2"/>-->

                <!--<EditText-->
                <!--android:id="@+id/addContactNum2ET"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="输入联系人号码2"-->
                <!--android:background="@null"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:inputType="phone"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:singleLine="true"-->
                <!--android:layout_toRightOf="@id/mTitle"-->
                <!--android:textAppearance="@style/TextAppearance.AppCompat.Title" />-->
                <!--</RelativeLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:background="@color/color_grey_text"
                    android:layout_height="0.5dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/getPhotoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:text="从相册中获取照片"/>
                    <ImageView
                        android:id="@+id/contactIM"
                        android:layout_below="@id/getPhotoTV"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
